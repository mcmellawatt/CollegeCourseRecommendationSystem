# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Home page -- login by default
GET     /                           controllers.Application.login()

# Login page
GET     /login                      controllers.Application.login()
POST    /dologin                    controllers.Application.doLogin()

# Main Single-Page-Application (SPA)
GET     /app                        controllers.Application.app()


# ----------------------------------------------------------------------------
# Auxiliary pages ...

# Courses
GET     /courses                    controllers.Application.courses()
GET     /courses/:id                controllers.Application.getCourse(id: String)

# Students
GET     /students/:id               controllers.Application.getStudent(id: String)

# Transcripts
GET     /transcripts/:id            controllers.Application.getTranscript(id: String)
    